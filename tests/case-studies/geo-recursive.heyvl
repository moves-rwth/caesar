// RUN: @caesar @file

// Verifying wp[geo1](c) <= [f = 1] * (c + 1) + [f != 1] * c
coproc geo1(init_c: UInt, init_f: UInt) -> (c: UInt, f: UInt)
    pre [init_f == 1] * (init_c + 1) + [init_f != 1] * init_c
    post c
{
    var prob_choice: Bool
    c = init_c
    f = init_f
    if f == 1 {
        prob_choice = flip(0.5)
        if prob_choice {
            f = 0
        } else {
            c = c + 1
        }
        c, f = geo1(c, f)
    } else {}
}