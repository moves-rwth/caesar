// RUN: @caesar @file

// The "Demonically Fair Random Walk" example from the "A New Proof Rule for Almost-Sure Termination" paper, Section 5.2

// WARNING: the encoding of the proof rule might be incorrect due to the nondeterminism, see Caesar issue

proc demonically_fair() -> ()
    pre 1
    post 1
{
    var x: UInt
    @ast(
        /* invariant: */    x >= 0,
        /* variant: */      x,
        /* variable: */     v,
        /* prob(v): */      0.5,
        /* decrease(v): */  1
    )
    while x != 0 {
        var prob_choice: Bool = flip(0.5)
        if prob_choice {
            x = x - 1
        } else {
            if \cap {
                x = x + 1
            } else {}
        }
    }
}