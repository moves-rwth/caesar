// Changed pre and invariant so that a minimal slice is one consisting of just
// the tick statement.

@ert
coproc main(init_x: UInt) -> (x: UInt)
    pre 0.1 * init_x
    post 0
{
    var prob_choice: Bool
    x = init_x
    @invariant(0.1 * x)
    while 2 <= x {
        prob_choice = flip((1/3))
        if prob_choice {
            x = x - 1
        } else {
            x = x - 2
        }
        tick 1
    }
}
