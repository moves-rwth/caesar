// Error-witnessing slice reveals the pre of geo1 might not hold in the
// recursive call.

coproc geo1(init_c: UInt, init_f: UInt) -> (c: UInt, f: UInt)
    pre [init_f == 1] * (init_c + 1) + [init_f != 1] * init_c
    post c
{
    var prob_choice: Bool
    c = init_c
    f = init_f
    if f != 1 { // it should be f == 1 in the verifying program
        prob_choice = flip(0.5)
        if prob_choice {
            f = 0
        } else {
            c = c + 1
        }
        c, f = geo1(c, f) // pre might not hold
    } else {}
}